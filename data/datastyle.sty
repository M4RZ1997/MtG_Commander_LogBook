% ------------------------------- Conditional Set for listed Columns ------------------------------ %
\newcommand{\conditionalSet}[4]{
	\def\foundMatch{0}%
	\foreach \str in #1 {
		\ifnum\pdfstrcmp{#4}{\str}=0%
			\xdef\foundMatch{1}
			\DTLnewdbentry{#2}{#3}{#4}%
			\breakforeach
		\fi
	}
	\ifnum\foundMatch=0%
		\PackageError{M4RZStyleCorp}{Error: #4 Invalid Input}{The Input can only be: #1}%%
	\fi
}
